{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RUN MC DEV",
            "type": "shell",
            "command": "mcdk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "python",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": [
                        {
                            "regexp": "  File \"(.*)\", line (\\d+), in .*",
                            "file": 1,
                            "line": 2
                        },
                        {
                            "regexp": "^(.*Error|.*Exception): (.*)$",
                            "message": 0
                        }
                    ]
                }
            ]
        }
    ]
}
